<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewActivity">

    <ImageView
        android:id="@+id/s_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="250dp"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_below="@id/s_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/s_id"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Id: 101"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/s_name"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Name: Ali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/s_phone"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Phone: 03218854231"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/s_email"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Email: ali@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/s_password"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Password: 124"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>